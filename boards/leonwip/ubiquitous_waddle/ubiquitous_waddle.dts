/dts-v1/;

#include <st/g0/stm32g0b1Xe.dtsi>
#include <st/g0/stm32g0b1r(b-c-e)tx-pinctrl.dtsi>

/ {
    model = "ubiquitous-waddle";
    compatible = "leonwip,ubiquitous-waddle";

    chosen {
        zephyr,sram = &sram0;
        zephyr,flash = &flash0;
        zephyr,code-partition = &slot0_partition;
        zephyr,canbus = &fdcan1;
    };

    buttons {
        compatible = "gpio-keys";

        button0: button0 {
            label = "DFU Button";
            gpios = <&gpioa 1 GPIO_ACTIVE_LOW>;
        };
    };

    leds {
        compatible = "gpio-leds";

        led_sta1: led_sta1 {
            gpios = <&gpioa 15 GPIO_ACTIVE_LOW>;
            label = "Status LED Channel 1";
        };

        led_act1: led_act1 {
            gpios = <&gpiob 3 GPIO_ACTIVE_LOW>;
            label = "Activity LED Channel 1";
        };

        led_sta2: led_sta2 {
            gpios = <&gpiob 4 GPIO_ACTIVE_LOW>;
            label = "Status LED Channel 2";
        };

        led_act2: led_act2 {
            gpios = <&gpiob 5 GPIO_ACTIVE_LOW>;
            label = "Activity LED Channel 2";
        };
    };

    aliases {
        mcuboot-button0 = &button0;
        led0 = &led_act1;
        led1 = &led_sta1;
        led2 = &led_act2;
        led3 = &led_sta2;
    };

    can_phy1: can-phy1 {
        compatible = "can-transceiver-gpio";
        standby-gpios = <&gpiob 6 GPIO_ACTIVE_HIGH>;
        max-bitrate = <8000000>;
        #phy-cells = <0>;
    };

    can_phy2: can-phy2 {
        compatible = "can-transceiver-gpio";
        standby-gpios = <&gpiob 7 GPIO_ACTIVE_HIGH>;
        max-bitrate = <8000000>;
        #phy-cells = <0>;
    };
};

&clk_lsi {
    status = "okay";
};

&clk_hsi {
    status = "okay";
};

&clk_hsi48 {
    status = "okay";
    crs-usb-sof;
};

&pll {
    div-m = <1>;
    mul-n = <8>;
    div-p = <2>;
    div-q = <2>;
    div-r = <2>;
    clocks = <&clk_hsi>;
    status = "okay";
};

&rcc {
    clocks = <&pll>;
    clock-frequency = <DT_FREQ_M(64)>;
    ahb-prescaler = <1>;
    apb1-prescaler = <1>;
};

zephyr_udc0: &usb {
    pinctrl-0 = <&usb_dm_pa11 &usb_dp_pa12>;
    pinctrl-names = "default";
    status = "okay";
};

&fdcan1 {
    clocks = <&rcc STM32_CLOCK_BUS_APB1 0x00001000>,
             <&rcc STM32_SRC_PLL_Q FDCAN_SEL(1)>;
    pinctrl-0 = <&fdcan1_rx_pb8 &fdcan1_tx_pb9>;
    pinctrl-names = "default";
    phys = <&can_phy1>;
    status = "okay";
};

&fdcan2 {
    clocks = <&rcc STM32_CLOCK_BUS_APB1 0x00001000>,
             <&rcc STM32_SRC_PLL_Q FDCAN_SEL(1)>;
    pinctrl-0 = <&fdcan2_rx_pb0 &fdcan2_tx_pb1>;
    pinctrl-names = "default";
    phys = <&can_phy2>;
    status = "okay";
};

&flash0 {
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        boot_partition: partition@0 {
            label = "mcuboot";
            reg = <0x00000000 DT_SIZE_K(64)>;
            read-only;
        };

        slot0_partition: partition@10000 {
            label = "image-0";
            reg = <0x00010000 DT_SIZE_K(160)>;
        };

        slot1_partition: partition@38000 {
            label = "image-1";
            reg = <0x00038000 DT_SIZE_K(160)>;
        };

        storage_partition: partition@60000 {
            label = "storage";
            reg = <0x00060000 DT_SIZE_K(128)>;
        };
    };
};
